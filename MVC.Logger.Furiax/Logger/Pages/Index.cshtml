@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<a button type="button" class="btn btn-success" asp-area="" asp-page="/Create">
    Add Bike Ride
</a>

<table id="rides" class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Rides[0].Date)</th>
            <th>@Html.DisplayNameFor(model => model.Rides[0].Distance)</th>
            <th>@Html.DisplayNameFor(model => model.Rides[0].Duration)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ride in Model.Rides)
        {
            <tr class="list-row">
                <td>@Html.DisplayFor(modelItem => ride.Date)</td>
                <td>@Html.DisplayFor(modelItem => ride.Distance)</td>
                <td>@ride.Duration.ToString(@"hh\:mm")</td>
                <td>
                    <a button type="button" class="btn btn-danger" asp-page="./Delete" asp-route-id="@ride.Id">Delete</a>
                </td>
                <td>
                    <a button type="button" class="btn btn-primary" asp-page="./Update" asp-route-id="@ride.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
