@model GameTracker.Forser.Models.GameSession
@{
    ViewData["Title"] = "Delete a Gaming Session";
}

<h1>Delete a gaming session</h1>
<h3>Are you sure you want to delete this session?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SessionStart)
        </dt>
        <dd class="col-sm-10">
            @Model.SessionStart.ToString("yyyy-MM-dd HH:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SessionEnd)
        </dt>
        <dd class="col-sm-10">
            @Model.SessionEnd.ToString("yyyy-MM-dd HH:mm")
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="@Model.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index">Back to Session List</a>
</form>