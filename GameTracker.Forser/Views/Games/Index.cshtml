@model IList<GameTracker.Forser.Models.GameInfo>

@{
    ViewData["Title"] = "Your list of Games!";
}

<h1>
    List of Games!
</h1>

<p>
    <a asp-action="Create">Register a new Game</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].GameTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@Model[i].Id">@Html.DisplayFor(model => model[i].GameTitle)</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@Model[i].Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>