@page
@model DeleteModel

@if(Model.MoodRecord.MoodLevel != 0){
    <h3>Are you sure you want to delete this record?</h3>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MoodRecord.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MoodRecord.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MoodRecord.MoodLevel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MoodRecord.MoodLevel)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="MoodRecord.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /><br /><br />
            <i class="fa fa-arrow-left"></i> <a asp-page="./Index">Back to list</a>
        </form>
    </div>
} else {
    <div>
        <h3>No record found</h3>
        <i class="fa fa-arrow-left"></i> <a asp-page="./Index">Back to list</a>
    </div>
}