@page
@model WeightHistoryModel
@{
    ViewData["Title"] = "Weight History";
}

<h2>Your Weight History</h2>

<form method="post">
    <div>
        <label for="weight">Please enter your weight:</label>
        <input type="number" id="weight" asp-for="logWeight.weight" />

        <label for="dateLogged">Date Logged:</label>
        <input type="date" id="dateLogged" asp-for="logWeight.loggedDate" />

        <input type="hidden" id="needsToConvert" name="needsToConvert" value="false" />

        <div>
            <button type="submit" onclick="document.getElementById('needsToConvert').value='true'">Convert to Kg</button>
            <button type="submit">Submit</button>
        </div>
    </div>
</form>

<div>
    <canvas id="weightChart"></canvas>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Weight</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.WeightLogs)
        {
            <tr>
                <td>@log.loggedDate.ToString("yyyy-MM-dd")</td>
                <td>@log.weight</td>
               
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('weightChart').getContext('2d');
        var weightChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.WeightLogs.Select(log => log.loggedDate.ToString("yyyy-MM-dd")))),
                datasets: [{
                    label: 'Weight',
                    data: @Html.Raw(Json.Serialize(Model.WeightLogs.Select(log => log.weight))),
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    x: {
                        type: 'time',
                        time: {
                            unit: 'day'
                        }
                    },
                    y: {
                        beginAtZero: false
                    }
                }
            }
        });
    </script>
}
