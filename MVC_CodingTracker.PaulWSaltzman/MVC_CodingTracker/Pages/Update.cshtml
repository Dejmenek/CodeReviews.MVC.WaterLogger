@page
@model MVC_CodingTracker.Pages.UpdateModel
@{
}

<h2>Update Record</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type= "hidden" asp-for="DevelopmentTime.Id" />
            <div class="form-group">
                <label asp-for="DevelopmentTime.DateStart" class="control-label"></label>
                <input type="datetime-local" asp-for="DevelopmentTime.DateStart" class="form-control" value="@Model.DevelopmentTime.DateStart.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="DevelopmentTime.DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DevelopmentTime.DateEnd" class="control-label"></label>
                <input type="datetime-local" asp-for="DevelopmentTime.DateEnd" class="form-control" value="@Model.DevelopmentTime.DateEnd.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="DevelopmentTime.DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DevelopmentTime.Comments" class="control-label"></label>
                <textarea asp-for="DevelopmentTime.Comments" class="form-control"></textarea>
                <span asp-validation-for="DevelopmentTime.Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

 @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    } 
}
