@page "{id:int?}"
@model DailyCalories.DeleteModel

@{
    ViewData["Title"] = "Delete - Daily Calories";
}


<div class="row">
    <div class="col">
      <h1>Daily Calories</h1>
    </div>
    <div class="col">
      <img src="~/img/calories-calculator.png" width="15%" class="float-end">
    </div>
</div>
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" asp-page="Index">Index</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="Create">Create New</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" asp-page="Delete">Delete</a>
    </li>
</ul>

<div class="tab-content p-3" id="myTabContent">

<h3>Are you sure you want to delete this?</h3>

    <h4>Daily Calories</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DailyCalories.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DailyCalories.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DailyCalories.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DailyCalories.Quantity)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="DailyCalories.Id" />
        <input type="submit" value="Delete" class="btn btn-danger p-1" />
    </form>
</div>
