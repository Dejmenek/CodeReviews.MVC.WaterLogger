<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/datatables.net-bs5/css/dataTables.bootstrap5.min.css" asp-append-version="true">
</head>
<body>
    <header>
        <nav class="navbar black navbar-expand-sm navbar-toggleable-sm">
            <div class="container">
                <h5 class="navbar-brand lead orangetext">Habiz</h5>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto ms-3">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="px-3 messageContainer">
                @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
                {
                    <div id="successMessage" class="alert alert-success fade show px-5 py-2 text-center" role="alert">
                        <strong>@TempData["successMessage"] </strong>
                    </div>
                }
                else if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
                {
                    <div id="errorMessage" class="alert alert-danger fade show px-5 py-2 text-center" role="alert">
                        <strong>@TempData["errorMessage"] </strong>
                    </div>
                }
            </div>
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>

    @await RenderSectionAsync("Scripts", required: true)
</body>
</html>
